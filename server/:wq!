CC ?= mpicc
CFLAGS ?= -g -Wall 
EXTRA_CFLAGS ?= -DUSE_AESD_CHAR_DEVICE=1
LDFLAGS ?= -I/usr/lib/x86_64-linux-gnu/openmpi/include 


default:
	$(CROSS_COMPILE)$(CC) $(EXTRA_CFLAGS) $(CFLAGS) $(LDFLAGS)  aesdsocket.c -o aesdsocket
all: 
	$(CROSS_COMPILE)$(CC) $(EXTRA_CFLAGS) $(CFLAGS) $(LDFLAGS)  aesdsocket.c -o aesdsocket
clean:
	rm -r aesdsocket
	
